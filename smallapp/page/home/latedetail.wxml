<view  class='cl' style="height:10px;"></view>


</view>









</view>


<view class='rcontent'>

  <view class="alljoins">
    <label></label>
    <text>已参加</text>
    <label></label>
  </view>


  <view class='joinsRow' wx:for="{{memberlist}}" wx:for-index="index" wx:for-item="item">
    <view class='fl'>
      <image class='joinPersonhead' src='{{item.avatarurl}}'></image>
    </view>
    <view class='fl'>
      <view class='joinsDesc'>
        <view>{{item.name}}</view>
        <view>{{item.promise_money }} | {{item.join_time}}</view>
      </view>
    </view>
    <view class='cl'></view>
    <label class="joinState {{item.pay_type == 1?'wxshow':'wxhide'}}">
      <text>已缴费</text>
    </label>
    <label class="joinState {{item.pay_type == 2?'wxshow':'wxhide'}}" style=' box-shadow: 0px 0px 0px 6px #F14E21 inset;'>
      <text>已退款</text>
    </label>
  </view>

</view>



 <view class='commfixedBottom'>
  <view class='act_group'>
    <button class="actbtn actbtn_red " bindtap='addnewmeeting' hover-class='tapbtn' plain="true"  >创建新活动</button>
    
  </view>
</view>
 
 
 