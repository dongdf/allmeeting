        <view class='cl'></view>
      </view>
      <view class='meetingcontent'>{{meetinginfo.content}}</view>
      <view class='cl'></view>
    </view>
  </view>
  <view  class='cl' style="height:10px;"></view>
</view>

<view class="end_act">
